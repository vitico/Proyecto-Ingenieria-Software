{
  "name": "hhapp",
  "private": true,
  "devDependencies": {
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0",
    "typescript": "~4.3.5"
  },
  "dependencies": {
    "eslint": "^7.31.0",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "android": "lerna --scope=NativeApp run android --stream --",
    "prestart": "npm run build",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "lerna run start --stream  --scope=@hhapp/client",
    "start:server": "lerna run dev --stream  --scope=@hhapp/server",
    "start:watch": "lerna run watch --parallel",
    "build": "lerna run build:libs",
    "web": "lerna --scope=web-app run start --stream --"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
