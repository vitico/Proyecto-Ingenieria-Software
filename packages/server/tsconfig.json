{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "tests/**/*",

  ],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["mocha"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "lib": ["es2018", "esnext.asynciterable"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
