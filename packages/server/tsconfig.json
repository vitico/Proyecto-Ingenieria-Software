{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["mocha"],
    "baseUrl": ".",
    "lib": ["es2018", "esnext.asynciterable", "ES2015.Promise"],
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true
  }
}
